{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-build",
            "label": "docker-build",
            "platform": "python",
            "dockerBuild": {
                "tag": "lastpasscsv:latest",
                "dockerfile": "${workspaceFolder}/Dockerfile",
                "context": "${workspaceFolder}"
            }
        },
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dependsOn": [
                "docker-build"
            ],
            "dockerRun": {
                "volumes": [ 
                    { 
                        "localPath": "~/Documents\\lp\\",
                        "containerPath": "/data"
                        } 
                    ]
            },
            "python": {
                "file": "lastpass-csv.py",
                "args": ["-h"]
            }
        }
    ]
}